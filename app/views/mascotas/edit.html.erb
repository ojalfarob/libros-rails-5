<%= form_for @mascotas do |f|%>

<div class="container">
    <div class="p-4">
        <div class="form-group">
        <%= f.label :nombre%>
        <%= f.text_field :nombre%>
        </div>
        <div class="form-group">
        <%= f.label :descrip%>
        <%= f.area_field :descrip%>
        </div>
        <div class="form-group">
        <%= f.label :cantidad%>
        <%= f.number_field :cantidad%>
        </div>
        <div class="form-group">
        <%= f.submit %>
        </div>
    </div>

</div>


<% end %>