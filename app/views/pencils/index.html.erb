<div class="container">
<h1> Pencils </h1>

<table class="table">
    <thead class="table-primary">
     <tr>
            <td>Name</td>
            <td>desc</td>
            <td>lar</td>
            <td><%= link_to 'new pencil',new_pencil_path,class:" btn  btn-primary ml-auto"%></td>
        </tr>
    
    </thead>
    <tbody>
        <% @pencil.each do |pencil| %>
        <tr>
            <td><%= pencil.name%> </td>
            <td><%= pencil.desc%> </td>
            <td><%= pencil.larg%> </td>
            <td><%= link_to 'Edit pencil',edit_pencil_path(pencil),class:" btn  btn-primary"%></td>
            <td><%= link_to 'delete pencil',pencil,method: :delete, data: {confirm: 'are you sure?'}, class:" btn  btn-danger"%></td>
        </tr>
        <% end%>
    </tbody>
</table>
</div>